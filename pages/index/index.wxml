<!--pages/index/index.wxml-->

<view>
    <view style="text-align: center;margin-top: 20rpx;font-weight: 700;">
        <text style="color: #303133;">创建新的图灵机</text>
    </view>
    <view class="button-container" style="font-weight: 700; margin-top: 20rpx;">
        <button bindtap="gotoedit" data-param="normal" style="color: #606266;" >单带图灵机</button>
        <button bindtap="gotoedit" data-param="multiple" style="color: #606266;">多带图灵机</button>
        <button bindtap="gotoedit" data-param="subprogram" style="color: #606266;">带子程序的图灵机</button>
    </view>
    <view style="text-align: center;margin-top: 20rpx;font-weight: 700;">
        <text style="color: #303133;">编辑已保存的图灵机</text>
    </view>
    <view class="button-container" style="font-weight: 700; margin-top: 20rpx;">
        <button bindtap="gotofiles" style="color: #606266;" >选择文件</button>
    </view>
</view>