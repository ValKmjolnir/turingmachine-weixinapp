<!--pages/simulator/simulator.wxml-->
<view class="page-body">
    <view class="button-container">
        <view>
            <button bindtap="inputString">
                <image src="/image/input.png" mode="aspectFit"></image>
            </button>
        </view>
        <view>
            <button bindtap="savePic">
                <image src="/image/savepic.png" mode="aspectFit"></image>
            </button>
        </view>
        <view>
            <button bindtap="nextStep">
                <image src="/image/next.png" mode="aspectFit"></image>
            </button>
        </view>
        <view>
            <button bindtap="terminateSimulation">
                <image src="/image/stop.png" mode="aspectFit"></image>
            </button>
        </view>
    </view>
    <canvas
        type="2d"
        id="canvas"
        style="position: fixed;width: 100%;height: 100%;"
        bindtouchstart="touchStart"
        bindtouchmove="touchMove"
        bindtouchend="touchEnd"
    ></canvas>
</view>